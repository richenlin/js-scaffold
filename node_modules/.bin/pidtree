#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/d/Workspace/nodejs/js-scaffold/node_modules/pidtree/bin/node_modules:/mnt/d/Workspace/nodejs/js-scaffold/node_modules/pidtree/node_modules:/mnt/d/Workspace/nodejs/js-scaffold/node_modules:/mnt/d/Workspace/nodejs/node_modules:/mnt/d/Workspace/node_modules:/mnt/d/node_modules:/mnt/d/Workspace/nodejs/js-scaffold/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/d/Workspace/nodejs/js-scaffold/node_modules/pidtree/bin/node_modules:/mnt/d/Workspace/nodejs/js-scaffold/node_modules/pidtree/node_modules:/mnt/d/Workspace/nodejs/js-scaffold/node_modules:/mnt/d/Workspace/nodejs/node_modules:/mnt/d/Workspace/node_modules:/mnt/d/node_modules:/mnt/d/Workspace/nodejs/js-scaffold/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../pidtree/bin/pidtree.js" "$@"
else
  exec node  "$basedir/../pidtree/bin/pidtree.js" "$@"
fi
